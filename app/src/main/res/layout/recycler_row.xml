<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/topBorder"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9C27B0" /> <!-- Üst kenarlık rengini burada değiştirebilirsiniz -->

    <TextView
        android:id="@+id/recyclerview_row_useremail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBorder"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="useremail text" />

    <ImageView
        android:id="@+id/recyclerview_row_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview_row_useremail_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/recyclerview_row_comment_text"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@id/recyclerview_row_imageview"
        android:layout_marginTop="1dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="comment text" />

    <CheckBox
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview_row_comment_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:button="@drawable/selector_like_item" />

    <CheckBox
        android:id="@+id/commentButton"
        android:layout_width="75dp"
        android:layout_height="54dp"
        android:layout_below="@id/recyclerview_row_comment_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="36dp"
        android:button="@drawable/baseline_add_comment_24" />

    <TextView
        android:id="@+id/likeText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/like"
        android:layout_marginStart="79dp"
        android:layout_marginTop="-39dp"
        android:layout_marginBottom="31dp"
        android:text="0 likes" />

    <View
        android:id="@+id/bottomBorder"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/likeText"
        android:layout_marginTop="1dp"
        android:background="#9C27B0" /> <!-- Alt kenarlık rengini burada değiştirebilirsiniz -->

</RelativeLayout>
